    <script>
    $('#submit').on('click', function() {
        var form = $('#application-form').serializeArray();

        var application = {};

        for (var i = 0; i < form.length; ++i) {
            application[form[i].name] = form[i].value;
        }

        console.log(application);
    });
    </script>
</body>

